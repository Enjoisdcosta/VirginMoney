<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/peopleFragment">

    <fragment
        android:id="@+id/peopleFragment"
        android:name="com.example.virginmoney.ui.people.PeopleFragment"
        android:label="People"
        tools:layout="@layout/fragment_people" >
        <action
            android:id="@+id/action_peopleFragment_to_peopleDetailFragment"
            app:destination="@id/peopleDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/roomFragment"
        android:name="com.example.virginmoney.ui.room.RoomFragment"
        android:label="Room"
        tools:layout="@layout/fragment_room" />
    <fragment
        android:id="@+id/peopleDetailFragment"
        android:name="com.example.virginmoney.ui.detail.PeopleDetailFragment"
        android:label="fragment_people_detail"
        tools:layout="@layout/fragment_people_detail" />

</navigation>